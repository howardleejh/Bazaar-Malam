<%- include('../partials/header') %>

<div class="container" style="height: 95vh; overflow-y: auto;">

    <h3 class="text-center text-uppercase mb-3"
        style="font-size: 3vw; font-family: 'Poiret One', cursive; text-justify: inter-word">
        Welcome to Gallery
    </h3>

    <div class="row row-cols-1 row-cols-md-4 g-4 pb-5">

        <% nfts.forEach(item => { %>

        <% if (item.name !== null) { %>

        <% let nftCardParams = {
                name: item.name, 
                image: item.image_url, 
                contractAdd: item.asset_contract.address, 
                tokenId: item.token_id
            } %>

        <%- include('../partials/nft_card', nftCardParams) %>

        <%  } %>

        <% }) %>

    </div>
    <%- include('../partials/body_footer') %>
</div>

<%- include('../partials/footer') %>