<div class="container pb-3 mx-auto" style="height: 95vh; overflow-y: auto;">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="container col-8  p-5" style="background-color: rgba(0, 0, 0, 0.7);">

            <!-- Title -->

            <h3 class="text-center text-uppercase mb-3" style="font-size: 3vw; font-family: 'Poiret One', cursive;">
                Create an Account
            </h3>

            <!-- Form -->

            <form action="/guests/signup" method="POST" class="d-grid gap-2 text-start">
                <div class="row">
                    <div class="col-6"><label for="register-form" class="form-label">First Name:</label>
                        <input type="text" class="form-control" id="register-form" name="first_name">
                    </div>
                    <div class="col-6"><label for="register-form" class="form-label"> Last Name:</label>
                        <input type="text" class="form-control" id="register-form" name="last_name">
                    </div>
                </div>
                <div>
                    <label for="register-form" class="form-label">Email Address:</label>
                    <input type="email" class="form-control" id="register-form" placeholder="john_wick@gmail.com"
                        name="email">
                </div>
                <div class="col"><label for="register-form" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="register-form" name="password">
                </div>
                <div class="col"><label for="register-form" class="form-label"> Confirm
                        Password:</label>
                    <input type="password" class="form-control" id="register-form" name="passwordConfirm">
                </div>
                <div class="d-grid gap-2 d-md-block mt-3 pb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-danger" href="/marketplace" role="button">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>