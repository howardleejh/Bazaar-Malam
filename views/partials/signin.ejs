<div class="container pb-5 mx-auto" style="height: 100vh; overflow-y: auto;">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <!-- Title -->

            <h3 class="text-center mt-3">Login</h3>

            <!-- Form -->

            <form action="/users/dashboard" method="POST">
                <div class="mb-3">
                    <label for="email-form" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email-form" aria-describedby="emailHelp" id="username"
                        placeholder="john_wick@email.com" name="user_email">
                </div>
                <div class="mb-3">
                    <label for="password-form" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password-form" name="user_password">
                </div>
                <div class="d-grid gap-2 d-md-block mb-3 pb-5">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a class="btn btn-danger" href="/" role="button">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>