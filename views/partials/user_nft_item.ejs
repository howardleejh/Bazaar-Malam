<div class="container mx-auto" style="height: 95vh; overflow-y: auto;">
    <div class="row h-100 justify-content-center align-items-center">

        <div class="card text-white py-3 px-5" style="background-color: rgba(0, 0, 0, 0.7);">
            <div class="card-header">
                <h3><%= name %> </h3>
                <p class="text-muted"> ITEM #<%= itemId %></p>
            </div>
            <div class="row g-0">
                <div class="col-md-6 text-center mb-3">
                    <img src="<%= image %>" alt="item-image">
                </div>
                <div class="col-md-6 pb-3">
                    <div class="card-body p-0 pb-3 mb-3">
                        <p class="card-text text-capitalize">
                            <strong class="text-muted text-uppercase">Contract Type:</strong> <%= contractType %></p>

                        <% let date = convertDate(dateCreated) %>

                        <p><strong class="text-muted text-uppercase">Date Created:</strong> <%= date %></p>

                        <p><strong class="text-muted text-uppercase">Purchase Status:</strong>
                            <strong><%= purchaseStatus.toUpperCase() %></strong>
                        </p>

                        <% let ownedDate = convertDate(purchaseDate) %>

                        <p><strong class="text-muted text-uppercase">Date Owned:</strong> <%= ownedDate %></p>

                        <table class="table table-responsive table-dark table-hover text-center mt-5">
                            <thead>
                                <tr>
                                    <th scope="col-4"><i class="fas fa-dollar-sign fs-5"></i></th>
                                    <th scope="col-4"><i class="fab fa-bitcoin fs-5"></i></th>
                                    <th scope="col-4"><i class="fab fa-ethereum fs-5"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="col-4 fw-bold">
                                        $ <%= nullCheck(dollarPrice) %>
                                    </td>
                                    <td class="col-4 fw-bold">
                                        <%= nullCheck(bitcoinPrice) %>
                                    </td>
                                    <td class="col-4 fw-bold">
                                        <%= nullCheck(ethereumPrice) %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <% let results = ""
                        if ( desc === "null") {

                             results = `This item does not have any description.`

                        } else {

                         results = desc

                        } %>

                        <p class="lh-base mt-5" id="item-desc" style="text-align:justify"><%= results %></p>

                        <a class="btn btn-outline-danger" href="/users/dashboard" role="button">Go Back</a>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% 

function nullCheck(val) {

        if (isNaN(val)) {

           let message = "0"

           return message

        } else {

            return val
        }

} 

function convertDate(date) {

let options = {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
    second: '2-digit'
}

return new Date(date).toLocaleString('en-US', options)
}

%>